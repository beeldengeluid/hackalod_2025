server {
	listen 80;
	server_name lodster.ruimdetijd.nl;
	return 301 https://$host$request_uri;
}

server {
	listen 443 ssl;
	server_name lodster.ruimdetijd.nl;

	http2 on;

	ssl_certificate /etc/letsencrypt/live/ruimdetijd.nl-0001/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/ruimdetijd.nl-0001/privkey.pem;

	location / {
		proxy_pass http://nginx-lodster:80;
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-Proto https;
	}
}