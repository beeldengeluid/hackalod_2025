server {
	listen 80;
	server_name lodster.ruimdetijd.nl;
	server_tokens off;
	root /usr/share/nginx/html;

	# SITE ROOT
	location / {
		try_files $uri $uri/ /index.html;
	}

	location /api/ {
		proxy_pass http://backend:80/;
	}

	location = /robots.txt {
		add_header Content-Type text/plain;
		return 200 "User-agent: *\nDisallow: /\n";
	}
}
