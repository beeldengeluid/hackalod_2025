{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2020"],
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "Node",
		"outDir": "dist",
		"resolveJsonModule": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020",
		"types": ["node"],
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist"]
}
